---

export interface Contributor {
  name: string;
  role: string;
  avatar: string;
  social: Social;
}

interface Social {
  github: string;
  linkedin: string;
}

interface Props {
  data: Contributor[];
}

const { data } = Astro.props;
---

<ul class="list">
  {
    data.map((item) => (
      <li class="list-item">
        <figure class="figure">
          <img class="avatar" src={item.avatar} alt={item.name} />
          <figcaption class="role">{item.role}</figcaption>
        </figure>
        <div class="social">
          <a target="_blank" rel="noopener noreferrer" href={item.social.github}>GitHub</a>
          <a target="_blank" rel="noopener noreferrer" href={item.social.linkedin}>LinkedIn</a>
        </div>
      </li>
    ))
  }
</ul>

<style scoped>
  .list {
    --size: 180px;

    display: flex;
    flex-flow: row wrap;
    align-items: flex-start;
    gap: 2rem;

    & .list-item {
      max-width: var(--size);
      display: flex;
      flex-direction: column;
      align-items: center;
      margin: 0;
    }

    & .figure {
      position: relative;
      box-shadow: 0 .5rem 1rem 1px rgba(0, 0, 0, .5);
      overflow: hidden;
      border-radius: .4rem;
    }

    & .avatar {
      width: var(--size);
      height: var(--size);
      display: block;
      object-fit: cover;
    }

    & .role {
      width: 100%;
      position: absolute;
      background-color: rgba(0, 0, 0, .7);
      bottom: 0;
      left: 0;
      right: 0;
      font-size: .8rem;
      text-align: center;
      font-weight: 600;
      color: #f0f0f0;
    }

    & .social {
      display: flex;
      justify-content: space-around;
      width: 100%;
      font-size: .9rem;
    }
  }
</style>
